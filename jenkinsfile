pipeline {
    agent any

    environment {
        IMAGE_NAME = "candyspark-app"
        IMAGE_TAG  = "new"
        FULL_IMAGE = "${IMAGE_NAME}:${IMAGE_TAG}"
    }




    stages {

        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/aravindchary156/Dockerized-candy-spark-app.git', branch: 'main'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${FULL_IMAGE} ."
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    sh '''
                        if [ $(docker ps -aq -f name=candyspark-app) ]; then
                            docker rm -f candyspark-app
                        fi
                    '''
                    sh "docker run -d -p 8085:80 --name candyspark-app ${FULL_IMAGE}"
                }
            }
        }
    }

    post {
        success {
            echo "✅ App is running at http://<EC2-Public-IP>:8085"
        }
        failure {
            echo "❌ Pipeline failed!"
        }
    }
}
